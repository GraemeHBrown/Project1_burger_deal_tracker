<div class="content">



  <a href="/eateries/new" class="button">Create new eatery</a>

  <br>
  <h2>All Eateries</h2>
  <br>

  <div class="session-message">
    <% if @message %>
    <p><%= @message %></p>
    <% end %>
  </div>

  <table class="eateries-table">
    <tr>
      <th>Eatery name:</th>
      <th>Location: </th>
      <th>Eatery details:</th>
    </tr>

    <% @eateries.each do |eatery| %>
    <tr>
      <td> <%= eatery.name%> </td>
      <td> <%= eatery.location%> </td>
      <td> <a href="/eateries/<%= eatery.id %>">Eatery Details</a></td>
    </tr>
  <% end %>
</table>

</div>
